set -eux

if [[ ! $(pg_dump --version) =~ 11\.[0-9]+$ ]]; then
  echo "Use PG 11 !"
  exit 1
fi

if [ -z ${RAILS_ENV-} ]; then
  export RAILS_ENV=test
fi

bundle exec rake db:environment:set
bundle exec rake db:pg:terminate_connections
bundle exec rake db:drop db:create
# bundle exec rake db:pg:structure_and_data:restore FILE=features/personas/personas_VERSION_100.pgbin
git checkout 68869e94c -- features/personas/personas.pgbin
bundle exec rake db:pg:structure_and_data:restore FILE=features/personas/personas.pgbin
bundle exec rake db:migrate
bundle exec rake db:environment:set
bundle exec rake db:pg:structure_and_data:dump FILE=features/personas/personas.pgbin

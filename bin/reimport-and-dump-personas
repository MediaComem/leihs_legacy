set -eux

if [ -z ${RAILS_ENV-} ]; then
  export RAILS_ENV=test
fi

bundle exec rake db:pg:terminate_connections db:drop db:create db:migrate VERSION=100
bundle exec rake leihs:dbio:import FILE=features/personas/dumps/minimal.yml REPLACE_MISSING_IMAGES=yes
bundle exec rake db:migrate
bundle exec rake db:pg:structure_and_data:dump FILE=features/personas/dumps/minimal.pgbin

bundle exec rake db:pg:terminate_connections db:drop db:create db:migrate VERSION=100
bundle exec rake leihs:dbio:import FILE=features/personas/dumps/normal_2018-06-27T13:10:15+02:00.yml REPLACE_MISSING_IMAGES=yes
bundle exec rake db:migrate
bundle exec rake db:pg:structure_and_data:dump FILE=features/personas/dumps/normal_2018-06-27T13:10:15+02:00.pgbin

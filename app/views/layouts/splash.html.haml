!!! 5
%html{:lang => I18n.locale}

  %head
    %title= strip_tags("Nectar | #{_("Equipment Booking and Inventory Management System")}")
    = render :partial => "layouts/head"
    = stylesheet_link_tag "borrow", :media => "all"
    = render partial: "layouts/custom_head_tag"

  %body

    .main-wrapper

      - if flash.present?
        = render :partial => "application/flash", :locals => {:flash => flash}

      %header= render :partial => "application/topbar"

      = yield

    = render :partial => "application/footer"

!!! 5
%html
  %head
    = render :partial => "layouts/head"
    %title= "#{@current_section.camelize} | Styleguide | leihs"

  %body

    .wrapper

      %h1.headline-xxl.padding-vertical-l Styleguide leihs

      .padding-left-xs
        - @sections.each_pair do |k,v|
          %a.navigation-tab-item{:href => styleguide_path(:section => k),:class => (@current_section == k) ? "active" : ""}= k.camelize

      .padding-bottom-m
        .content-wrapper.padding-inset-m

          .padding-vertical-l
            - @sections[@current_section].each do |section|
              %a.button{:href => "##{section}"}= section.camelize

          - @sections[@current_section].each do |section|
            %h2.headline-l.padding-vertical-l.separated-bottom.margin-bottom-m.margin-top-xl
              %a{:name => "#{section}"}= section.camelize
            = render :partial => "styleguide/#{@current_section}/#{section}"

.row.line.font-size-xs.focus-hover-thin{:"data-type" => "inline-entry"}
  
  %input{:type => :hidden, :name => "#{entry_type}[images_attributes][#{entry.id}][id]", :value => entry.id}
  %input{:type => :hidden, :name => "#{entry_type}[images_attributes][#{entry.id}][_destroy]"}

  .line-col.col1of10.text-align-center
    %a{:href => get_image_thumbnail_path(entry.id), :target => "_blank"}
      %img.max-height-xxs.max-width-xxs{:src => get_image_thumbnail_path(entry.id)}

  .line-col.col6of10.text-align-left
    %a.blue{:href => get_image_path(entry.id), :target => "_blank"}
      = entry.filename

  .line-col.col3of10.text-align-right
    %button.button.small.inset{:"data-remove" => true}= _("Remove")

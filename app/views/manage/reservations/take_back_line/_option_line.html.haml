.line.light.row.focus-hover-thin{:"data-line-type" => "option_line", :"data-id" => line.id}

  .line-info

  .line-col.padding-left-xs
    .row
      .col1of4
        %label.padding-inset-s
          %input{:type => :checkbox, :"data-select-line" => true, :autocomplete => :off}

  .col1of10.line-col
    .row.table
      .table-row
        .col2of3.table-cell.vertical-align-middle.line-height-xxl
          %input.small.width-full.text-align-center{:type => :text, :autocomplete => :off, :"data-quantity-returned" => true, :inputmode => :numeric}
        .col1of3.table-cell.vertical-align-middle.line-height-xxl
          %span= "/#{line.quantity}"

  .col1of10.line-col.text-align-center
    %span.grey-text= line.option.inventory_code

  .col4of10.line-col.text-align-left
    %strong= line.option.name

  .col1of10.line-col.text-align-center
    - unless line.purpose.blank?
      .tooltip{:"title" => line.purpose.description, :"data-tooltip-template" => "manage/views/purposes/tooltip"}
        %i.fa.fa-comment.grey

  .col1of10.line-col.text-align-center

  .col2of10.line-col.line-actions.padding-left-xxs.padding-right-s
    .multibutton
      %button.button.white.text-ellipsis{:"data-edit-lines" => true, :"data-ids" => "[#{line.id}]"}= _("Change entry")
      .dropdown-holder.inline-block
        .button.white.dropdown-toggle
          .arrow.down
        %ul.dropdown.right
          %li
            %a.dropdown-item{:href => manage_contract_path(current_inventory_pool, line.contract.id), :target => "_blank"}
              %i.fa.fa-file-alt
              = _("Contract")
              = line.contract.compact_id

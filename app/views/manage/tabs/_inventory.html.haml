.row

  %nav
    %ul

      - if group_manager?
        %li
          %a.navigation-tab-item.margin-right-xxs.padding-horizontal-m.float-left{:href => manage_inventory_path(current_inventory_pool),
          :class => (defined? active_tab and active_tab == :inventory) ? "active" : ""}
            = _("Inventory")

      - if lending_manager?
        %li
          %a.navigation-tab-item.margin-right-xxs.padding-horizontal-m.float-left{:href => manage_inventory_helper_path(current_inventory_pool),
          :class => (defined? active_tab and active_tab == :helper) ? "active" : ""}
            = _("Helper")

        %li
          %a.navigation-tab-item.margin-right-xxs.padding-horizontal-m.float-left{:href => manage_inventory_expert_path(current_inventory_pool),
          :class => (defined? active_tab and active_tab == :expert) ? "active" : ""}
            = _("Advanced Search")

        %li
          %a.navigation-tab-item.margin-right-xxs.padding-horizontal-m.float-left{:href => manage_categories_path(current_inventory_pool),
          :class => (defined? active_tab and active_tab == :categories) ? "active" : ""}
            = _("Categories")

        %li
          %a.navigation-tab-item.margin-right-xxs.padding-horizontal-m.float-left{:href => manage_templates_path(current_inventory_pool),
          :class => (defined? active_tab and active_tab == :templates) ? "active" : ""}
            = _("Templates")

  -#= render :partial => "manage/tabs/current_inventory_pool", :locals => {:current_inventory_pool => current_inventory_pool}
